# Dockerfile pour json-server (API Backend)
FROM node:18-alpine

WORKDIR /app

# Installer json-server globalement
RUN npm install -g json-server

# Copier le fichier de base de données
COPY db.json .

# Exposer le port 3000
EXPOSE 3000

# Démarrer json-server avec les options appropriées
CMD ["json-server", "--watch", "db.json", "--host", "0.0.0.0", "--port", "3000"]
